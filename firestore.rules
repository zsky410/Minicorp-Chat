rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection
    match /users/{userId} {
      // Allow read for authenticated users or for web dashboard (demo mode)
      allow read: if request.auth != null || true; // Temporary: allow all reads for demo
      // Allow write for authenticated users updating themselves OR for web dashboard (demo mode)
      allow write: if request.auth != null && request.auth.uid == userId || true; // Temporary: allow all writes for demo
    }

    // Conversations
    match /conversations/{conversationId} {
      // Temporarily allow all authenticated users to test
      // TODO: Restrict after confirming it works
      allow read, write: if request.auth != null;
    }

    // Messages subcollection
    match /conversations/{conversationId}/messages/{messageId} {
      // Allow read if user is a member of the parent conversation
      allow read: if request.auth != null &&
        request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.members;

      // Allow create if user is authenticated
      allow create: if request.auth != null;

      // Allow update/delete if user is the sender
      allow update, delete: if request.auth != null &&
        request.auth.uid == resource.data.senderId;
    }

    // Departments
    match /departments/{departmentId} {
      // Allow read for authenticated users or for web dashboard (demo mode)
      allow read: if request.auth != null || true; // Temporary: allow all reads for demo
      // Allow write for authenticated users or for web dashboard (demo mode)
      allow write: if request.auth != null || true; // Temporary: allow all writes for demo
    }

  // Announcements
  match /announcements/{announcementId} {
    allow read: if request.auth != null;
    // Director: chỉ tạo thông báo công ty (scope = "company" hoặc targetDepartments rỗng)
    // Manager: chỉ tạo thông báo phòng ban mình (scope = "department" và targetDepartments chứa department của user)
    allow create: if request.auth != null &&
      (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'director' &&
       (request.resource.data.scope == 'company' ||
        !('targetDepartments' in request.resource.data) ||
        request.resource.data.targetDepartments.size() == 0) ||
       get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'manager' &&
       request.resource.data.scope == 'department' &&
       'targetDepartments' in request.resource.data &&
       get(/databases/$(database)/documents/users/$(request.auth.uid)).data.department in request.resource.data.targetDepartments);
    // Update: cho phép tất cả authenticated users update readBy (đánh dấu đã đọc)
    // Hoặc cho phép Director/Manager update/delete thông báo của mình
    allow update: if request.auth != null &&
      (// Cho phép update readBy (bất kỳ user nào cũng có thể đánh dấu đã đọc)
       request.resource.data.diff(resource.data).affectedKeys().hasOnly(['readBy', 'updatedAt']) ||
       // Hoặc update bởi creator (Director/Manager)
       (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'director' &&
        (resource.data.scope == 'company' ||
         !('targetDepartments' in resource.data) ||
         resource.data.targetDepartments.size() == 0)) ||
       (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'manager' &&
        resource.data.scope == 'department' &&
        'targetDepartments' in resource.data &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.department in resource.data.targetDepartments));
    allow delete: if request.auth != null &&
      (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'director' &&
       (resource.data.scope == 'company' ||
        !('targetDepartments' in resource.data) ||
        resource.data.targetDepartments.size() == 0) ||
       get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'manager' &&
       resource.data.scope == 'department' &&
       'targetDepartments' in resource.data &&
       get(/databases/$(database)/documents/users/$(request.auth.uid)).data.department in resource.data.targetDepartments);
  }

  // Pinned Messages
  match /pinned_messages/{pinId} {
    allow read: if request.auth != null;
    // Chỉ Manager mới có thể pin (trong phòng ban mình quản lý)
    // Director không thể pin
    allow create: if request.auth != null &&
      get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'manager' &&
      request.resource.data.departmentId == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.department;
    allow delete: if request.auth != null &&
      get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'manager' &&
      resource.data.pinnedBy == request.auth.uid &&
      resource.data.departmentId == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.department;
  }

  // Tasks
  match /tasks/{taskId} {
    allow read: if request.auth != null;
    allow create: if request.auth != null &&
      (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
       get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'director' ||
       get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'manager');
    allow update: if request.auth != null &&
      (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
       get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'director' ||
       get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'manager' ||
       resource.data.assignedTo == request.auth.uid);
    allow delete: if request.auth != null &&
      (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
       get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'director' ||
       get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'manager');
  }

  // Polls
  match /polls/{pollId} {
    allow read: if request.auth != null;
    // Chỉ Manager mới có thể tạo polls (trong phòng ban mình quản lý)
    // Director không thể tạo polls
    allow create: if request.auth != null &&
      get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'manager' &&
      request.resource.data.departmentId == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.department;
    // Director không thể vote (chỉ Employee và Manager)
    allow update: if request.auth != null &&
      get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role != 'director';
    allow delete: if request.auth != null &&
      get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'manager' &&
      resource.data.departmentId == get(/databases/$(database)/documents/users/$(request.auth.uid)).data.department;
  }

  // Department Messages
  match /departments/{departmentId}/messages/{messageId} {
    allow read: if request.auth != null;
    // Director không thể chat trong phòng ban (chỉ xem read-only)
    // Employee và Manager có thể chat trong phòng ban mình
    allow create: if request.auth != null &&
      get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role != 'director' &&
      get(/databases/$(database)/documents/users/$(request.auth.uid)).data.department == departmentId;
    allow update, delete: if request.auth != null &&
      resource.data.senderId == request.auth.uid;
  }
}
}

